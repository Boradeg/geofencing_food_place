<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_l"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/grey_bg"
        app:cardCornerRadius="7dp"
        app:elevation="10dp">

        <ImageView
            android:id="@+id/shop_img"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/shop3"
            android:padding="10dp"

            android:scaleType="centerCrop"
            android:layout_centerVertical="true"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/shop_img"
            >

        <TextView
            android:id="@+id/shop_name"
            android:layout_marginTop="10dp"

            android:singleLine="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppinsbold"
            android:text="Ganesh Shop"
            android:textSize="16sp"
            android:textColor="@color/black"
            />


        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:fontFamily="@font/poppinsmedium"
            android:text="Address: Pune"
            android:singleLine="true"
            android:layout_below="@id/shop_name"
            android:textColor="@color/black10"
            android:textSize="12dp" />
            <ImageView
                android:id="@+id/starPic"
                android:layout_below="@id/address"
                android:layout_width="16dp"
                android:layout_marginStart="5dp"
                android:layout_height="16dp"
                android:src="@drawable/star"

                />
            <TextView
                android:id="@+id/rating_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="3.5"
                android:layout_below="@id/address"
                android:layout_toRightOf="@id/starPic"
                android:textColor="@color/black10"
                android:textSize="12dp" />
            <ImageView
                android:id="@+id/offerPic"
                android:layout_below="@id/starPic"
                android:layout_width="16dp"
                android:layout_marginStart="5dp"
                android:layout_height="16dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/price_tag"

                />
            <TextView
                android:id="@+id/tv_offer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppinsmedium"
                android:text="30% Off"
                android:layout_below="@id/starPic"
                android:layout_toRightOf="@id/offerPic"
                android:paddingBottom="10dp"
                android:textColor="@color/black10"
                android:textSize="12dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/like_btn"
            android:src="@drawable/btn_3"
            app:tint="@color/purple"
            android:layout_margin="10dp"

           android:layout_alignParentRight="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="6dp"/>

    </RelativeLayout>
</RelativeLayout>


