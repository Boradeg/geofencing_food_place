<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="10dp"
    tools:context=".Shops.prodetails">
    <RelativeLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivBackBtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/back" />

        <ImageView
            android:id="@+id/ivFavBtn"
            android:layout_alignParentRight="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/fav_icon" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/layout2"
        android:layout_marginHorizontal="10dp"
        android:background="@color/lightGrey"
        android:layout_marginVertical="10dp"
        android:layout_below="@id/layout1"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:src="@drawable/shop3"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
             />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_margin="5dp"
        android:layout_below="@id/layout2"
        android:id="@+id/layout3"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/name"
            android:layout_weight="1"
            android:text="Punam Mobile Store"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/black"
            android:textSize="23sp"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/offer"
            android:layout_width="wrap_content"
            android:text="30% Off"
            android:layout_alignParentRight="true"
            android:textSize="22sp"
            android:fontFamily="@font/poppinsbold"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/layout3"
        android:layout_margin="5dp"
        android:id="@+id/layout4"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            android:text="Offer On : "
            android:layout_centerVertical="true"
            android:textColor="@color/black10"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/productName"
            android:layout_toRightOf="@id/textView22"
            android:text="Mobile Cover"
            android:textColor="@color/grey10"
            android:layout_centerVertical="true"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:id="@+id/imageView23"
            android:layout_marginEnd="8dp"
            android:src="@drawable/star"
            android:layout_centerVertical="true"
            android:fontFamily="@font/poppinsregular"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating"
            android:text="5"
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/imageView23"
            android:textColor="@color/black"
            android:fontFamily="@font/poppinsregular"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/layout4"
        android:layout_margin="5dp"
        android:id="@+id/layout5"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView223"
            android:text="Address : "
            android:textColor="@color/black10"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:text="Akurdi, Pune"
            android:textColor="@color/grey10"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/layout5"
        android:layout_margin="5dp"
        android:id="@+id/layout6"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView34"
            android:text="Mobile Number : "
            android:textColor="@color/black10"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mobileNumber"
            android:text="8403454534"
            android:textColor="@color/grey10"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"/>


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_below="@id/layout6"
        android:layout_margin="5dp"
        android:id="@+id/layout7"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView94"
            android:text="Landmark: "
            android:textColor="@color/black10"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/landmark"
            android:text="Near Railway Station"
            android:textColor="@color/grey10"
            android:textSize="14sp"
            android:fontFamily="@font/poppinsbold"/>


    </LinearLayout>
    <androidx.appcompat.widget.AppCompatButton
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:text="Track Shop Location"
        android:background="@drawable/purple_btn_bg"
        android:id="@+id/track_button"
       android:layout_below="@id/layout7"
        android:layout_height="wrap_content"
        />
    <androidx.appcompat.widget.AppCompatButton
        style="@android:style/Widget.Button"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:text="Send SMS"
        android:background="@drawable/purple_btn_bg"
        android:id="@+id/sendSmsButton"
        android:layout_below="@id/track_button"
        android:layout_margin="8dp"
        android:layout_height="wrap_content"
        />
</RelativeLayout>
